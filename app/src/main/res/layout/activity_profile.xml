<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/wallpaper"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/profileCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:cardElevation="50dp"
        android:stateListAnimator="@drawable/card_state_list_anim"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Profile Picture Card">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_picture"
            android:background="@drawable/profile_border_gradient"
            android:padding="4dp"
            android:contentDescription="Profile Picture" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FADHIL ANNAUFAL MUSYAFA"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/tvRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web Developer"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/infoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:stateListAnimator="@drawable/card_state_list_anim"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Information Card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: annaufalfadhil@gmail.com"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: +62 878-1236-7840"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KING OF WEB DEVELOPER"
                android:textSize="16sp"
                android:drawableStart="@drawable/ic_info"
                android:drawablePadding="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Main Menu"
        android:layout_marginTop="24dp"
        app:cornerRadius="8dp"
        app:elevation="4dp"
        android:contentDescription="Back to Main Menu Button"/>

</LinearLayout>